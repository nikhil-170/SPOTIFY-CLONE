<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pausePlayImageId"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewID"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="2dp"
        android:clickable="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cardViewLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/likeId"
                android:layout_width="42dp"
                android:layout_height="28dp"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="4dp"
                app:layout_constraintBottom_toBottomOf="@+id/textViewBottomLeft"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewMiddle"
                app:srcCompat="@drawable/like_not_favorite" />

            <ImageView
                android:id="@+id/albcvrsmHistoryCardViewId"
                android:layout_width="85dp"
                android:layout_height="97dp"
                android:layout_marginStart="3dp"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/textViewTopId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:text="TextView"
                app:layout_constraintStart_toEndOf="@+id/albcvrsmHistoryCardViewId"
                app:layout_constraintTop_toTopOf="@+id/albcvrsmHistoryCardViewId" />

            <TextView
                android:id="@+id/textViewMiddle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:text="TextView"
                app:layout_constraintStart_toStartOf="@+id/textViewTopId"
                app:layout_constraintTop_toBottomOf="@+id/textViewTopId" />

            <TextView
                android:id="@+id/textViewBottomLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:text="TextView"
                app:layout_constraintStart_toStartOf="@+id/textViewMiddle"
                app:layout_constraintTop_toBottomOf="@+id/textViewMiddle" />

            <TextView
                android:id="@+id/textViewLeftId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:text="@string/empty"
                app:layout_constraintEnd_toEndOf="@+id/albcvrsmHistoryCardViewId"
                app:layout_constraintStart_toStartOf="@+id/albcvrsmHistoryCardViewId"
                app:layout_constraintTop_toBottomOf="@+id/albcvrsmHistoryCardViewId" />

            <TextView
                android:id="@+id/textViewRight"
                android:layout_width="25dp"
                android:layout_height="17dp"
                android:layout_marginStart="100dp"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="12dp"
                android:text="@string/empty"
                app:layout_constraintStart_toEndOf="@+id/textViewBottomLeft"
                app:layout_constraintTop_toBottomOf="@+id/likeId" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>